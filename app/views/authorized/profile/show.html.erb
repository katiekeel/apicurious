<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="profile-pic">
        <img src="<%= @user.image_url %>" alt="Profile image">
      </div>
      <div class="profile-name">
        <h1 class="display-3"><%= @user.name %></h1>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="tabpanel text-center">

        <ul class="nav nav-pills pills" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="pill" href="#starred-repos" role="pill">Starred Repos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" data-toggle="pill" href="#followers" role="pill">Followers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" data-toggle="pill" href="#following" role="pill">Following</a>
          </li>
        </ul>

        <div class="tab-content" id="tabs">
          <div class="tab-pane" id="starred-repos" role="tabpanel"></div>
          <div class="tab-pane" id="followers" role="tabpanel"></div>
